<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.linuxmotion.livewallpaper"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="14" android:maxSdkVersion="15"/>
     
    <uses-feature android:name="android.software.live_wallpaper" />
    <uses-permission android:name="android.permission.SET_WALLPAPER"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" android:allowClearUserData="true"
        android:enabled="true">
        
        <service
            android:label="OpenLiveWallpaper"
            android:name=".photoswitcher.services.OpenLiveWallPaperService"
            android:permission="android.permission.BIND_WALLPAPER" >
            	<intent-filter>
                	<action android:name="android.service.wallpaper.WallpaperService" />
            	</intent-filter>
            	<meta-data android:name="android.service.wallpaper" android:resource="@xml/photo_switcher" />
        </service>
 
         <activity
            android:label="@string/app_name"
            android:name=".activities.MainActivity" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".activities.WallpaperViewer">
        </activity>
        
        <activity android:name=".activities.BasicFileBrowser">
        </activity>
        
        <activity
            android:label="openLiveWallpaper"
            android:name="org.linuxmotion.filemanager.openFileManagerActivity">
         </activity>
         
        
        <activity android:label="Settings" android:name=".activities.settings.Settings"></activity>
        
        
        <activity android:name=".activities.DetailedImageViewer"
             android:launchMode="singleTop"
              android:screenOrientation="portrait" 
              android:excludeFromRecents="true">
            <intent-filter>
      			<action android:name="android.intent.action.SEND" />
	      	 	<category android:name="android.intent.category.DEFAULT" />
	       	 	<data android:mimeType="image/*" />
		    </intent-filter>
        </activity>
         
    </application>

</manifest>